<odoo>
    <data>

        <!--Vehicle Form-->
        <record id='fleet_vehicle_warranty_inherit' model='ir.ui.view'>
            <field name="name">fleet_vehicle.form.inherit</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet_manage_vehicle.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="return_warranty_action_to_open"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-book"
                            context="{'xml_id':'WarrantyInspectSheet_action_id'}">
                            <field name="warranty_count" widget="statinfo" string="Warrantys"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>