<odoo>
    <data>

        <!-- 车辆保养计划 tree -->
        <record model="ir.ui.view" id="fleet_manage_warranty_maintain.warranty_plan_view_tree">
            <field name="name">warranty_plan.tree</field>
            <field name="model">fleet_manage_warranty_maintain.warranty_plan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- 车辆保养计划 view -->
        <record model="ir.ui.view" id="fleet_manage_warranty_maintain.warranty_plan_view_form">
            <field name="name">warranty_plan.form</field>
            <field name="model">fleet_manage_warranty_maintain.warranty_plan</field>
            <field name="arch" type="xml">
                <form>

                    <header>

                        <button name="action_draft" type="object"
                                string="draft" states="commit,audit,execute,done"/>
                        <button name="action_commit" type="object"
                                string="commit" states="draft" class="oe_highlight"/>
                        <button name="action_audit" type="object"
                                string="audit" states="commit" class="oe_highlight"/>
                        <button name="action_execute" type="object"
                                string="execute" states="audit" class="oe_highlight"/>

                        <field name="state" widget="statusbar" />  <!-- &lt;!&ndash;statusbar_visible="draft,sent,sale"&ndash;&gt;-->
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>

                        <group>
                            <field name="monthly" /> <!--attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}"-->

                            <field name="create_uid" readonly="1" />
                            <field name="create_date" readonly="1" />

                        </group>
                        <notebook>
                            <page string="plan_sheet_ids_page">
                                <field name="plan_sheet_ids" widget="one2many_list">
                                    <tree string="plan_sheet_ids_tree" editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="fleet_id" /> <!--context="{'default_type': 'product'}"-->
                                        <field name="vehicle_no"/>
                                        <field name="vehicle_type"/>
                                        <field name="maintain_sheet_no"/>
                                        <field name="warranty_category"/>
                                        <!--<field name="has_attachments" invisible="1"/>-->
                                        <!--<button name="action_see_attachments" type="object" icon="fa-files-o" attrs="{'invisible': [('has_attachments', '=', False)]}"/>-->
                                        <!--<button name="action_see_attachments" type="object" icon="fa-file" attrs="{'invisible': [('has_attachments', '=', True)]}"/>-->
                                        <!--<field name="product_qty"/>-->
                                        <!--<field name="product_uom_id" options="{'no_open':True,'no_create':True}"/>-->
                                        <!--<field name="attribute_value_ids" widget="many2many_tags" domain="[('product_ids.product_tmpl_id', '=', parent.product_tmpl_id)]" groups="product.group_product_variant"/>-->
                                        <!--<field name="operation_id" groups="mrp.group_mrp_routings" domain="[('routing_id', '=', parent.routing_id)]" options="{'no_quick_create':True,'no_create_edit':True}"/>-->

                                        <!--<field name="default_usage"/>-->
                                        <!--<field name="collar_cap"/>-->
                                        <!--<field name="applicable_carmodel"/>-->
                                        <!--<field name="remark"/>-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- 车辆保养计划 action -->
        <record model="ir.actions.act_window" id="fleet_manage_warranty_maintain.warranty_plan_action">
            <field name="name">warranty_plan</field>
            <field name="res_model">fleet_manage_warranty_maintain.warranty_plan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- 车辆保养计划 menu -->
        <menuitem name="warranty_plan"
                  id="fleet_manage_warranty_maintain.warranty_plan_menuitemId" sequence="21"
                  parent="fleet_manage_warranty_maintain_warranty_menuitemId"
                  action="fleet_manage_warranty_maintain.warranty_plan_action"/>

    </data>
</odoo>