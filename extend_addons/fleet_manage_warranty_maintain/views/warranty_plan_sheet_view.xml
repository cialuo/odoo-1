<odoo>
    <data>

        <!-- 计划单 tree -->
        <record model="ir.ui.view" id="fleet_manage_warranty_maintain.warranty_plan_sheet_view_tree">
            <field name="name">warranty_plan_sheet.tree</field>
            <field name="model">fleet_manage_warranty_maintain.warranty_plan_sheet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="vehicle_no"/>
                    <field name="vehicle_type"/>
                    <field name="warranty_category"/>
                </tree>
            </field>
        </record>

        <!-- 计划单 view -->
        <record model="ir.ui.view" id="fleet_manage_warranty_maintain.warranty_plan_sheet_view_form">
            <field name="name">warranty_plan_sheet.form</field>
            <field name="model">fleet_manage_warranty_maintain.warranty_plan_sheet</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_draft" type="object"
                                string="back to draft"
                                states="confirmed,done"/>
                        <button name="action_confirm" type="object"
                                string="confirm" states="draft"
                                class="oe_highlight"/>
                        <button name="action_done" type="object"
                                string="done" states="confirmed"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>

                        <group col="2">
                            <group >
                                <field name="vehicle_no"/>
                                <field name="create_uid" readonly="1" />
                                <field name="warranty_category"/>
                            </group>
                            <group >
                                <field name="vehicle_type"/>
                                <field name="create_date" readonly="1" />
                            </group>

                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- 计划单 action -->
        <record model="ir.actions.act_window" id="fleet_manage_warranty_maintain.warranty_plan_sheet_action">
            <field name="name">warranty_plan_sheet</field>
            <field name="res_model">fleet_manage_warranty_maintain.warranty_plan_sheet</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- 计划单 menu -->
        <menuitem name="warranty_plan_sheet"
                  id="fleet_manage_warranty_maintain.warranty_plan_sheet_menuitemId" sequence="22"
                  parent="fleet_manage_warranty_maintain_warranty_menuitemId"
                  action="fleet_manage_warranty_maintain.warranty_plan_sheet_action"/>

    </data>
</odoo>