<odoo>
    <data>
        <record id="fleet_manage_maintain_inspect_confirm_view" model="ir.ui.view">
            <field name="name">fleet_manage_maintain.inspect.confirm.form</field>
            <field name="model">fleet_manage_maintain.inspect.confirm</field>
            <field name="arch" type="xml">
                <form string="Confirm Inspect">
                    <p class="oe_grey">
                        <!--Once draft invoices are confirmed, you will not be able-->
                        <!--to modify them. The invoices will receive a unique-->
                        <!--number and journal items will be created in your chart-->
                        <!--of accounts.-->
                    </p>
                    <footer>
                        <button string="Confirm Insepct" name="inspect_confirm" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="fleet_manage_maintain_inspect_return_view" model="ir.ui.view">
            <field name="name">fleet_manage_maintain.inspect.return.form</field>
            <field name="model">fleet_manage_maintain.inspect.return</field>
            <field name="arch" type="xml">
                <form string="Confirm Inspect">
                    <group>
                        <field name="return_reason"/>
                    </group>
                    <footer>
                        <button string="Confirm Return" name="inspect_return" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>



        <act_window id="fleet_manage_maintain_inspect_confirm"
            multi="True"
            key2="client_action_multi"
            name="Confirm Inspect"
            res_model="fleet_manage_maintain.inspect.confirm"
            src_model="fleet_manage_fault.repair"
            view_mode="form"
            target="new"
            view_type="form" />


        <act_window id="fleet_manage_maintain_inspect_return"
            name="Confirm Return"
            res_model="fleet_manage_maintain.inspect.return"
            view_mode="form"
            target="new"
            view_type="form" />


    </data>
</odoo>