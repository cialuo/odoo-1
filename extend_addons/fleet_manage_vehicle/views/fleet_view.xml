<odoo>
    <data>
        <!--Vehicle Tree-->
        <record id='fleet_vehicle_view_tree' model='ir.ui.view'>
            <field name="name">fleet.vehicle.tree</field>
            <field name="model">fleet.vehicle</field>
            <field name="priority">0</field>
            <field name="arch" type="xml">
                <tree string="Vehicle" decoration-warning="contract_renewal_due_soon and not contract_renewal_overdue" decoration-danger="contract_renewal_overdue">
                    <field name="active" invisible="1"/>
                    <field name="license_plate" />
                    <field name="inner_code" />
                    <field name="company_id" />
                    <field name="route_id" />
                    <!--<field name="driver"/>-->
                    <field name="annual_inspection_date" />
                    <field name="state"/>
                    <!--<field name="odometer_unit" />-->
                    <field name="contract_renewal_due_soon" invisible="1"/>
                    <field name="contract_renewal_overdue" invisible="1" />
                    <field name="contract_renewal_total" invisible="1"/>
                </tree>
            </field>
        </record>

        <!--EmissionStandard Tree-->
        <record id='fleet_manage_vehicle_emission_standard_tree' model='ir.ui.view'>
            <field name="name">fleet_manage_vehicle.emission_standard.tree</field>
            <field name="model">fleet_manage_vehicle.emission_standard</field>
            <field name="arch" type="xml">
                <tree string="Emission Standard">
                    <field name="name"/>
                    <field name="code" />
                    <field name="remark" />
                </tree>
            </field>
        </record>


        <!--Vehicle Form-->
        <record id='fleet_vehicle_view_form' model='ir.ui.view'>
            <field name="name">fleet_vehicle.form</field>
            <field name="model">fleet.vehicle</field>
            <field name="priority">0</field>
            <field name="arch" type="xml">
                <form string="Vehicle">
                    <header>
                        <field name="state"  widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--<button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">-->
                                <!--<field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>-->
                            <!--</button>-->
                            <!--<button name="action_to_open"-->
                                <!--type="object"-->
                                <!--class="oe_stat_button"-->
                                <!--icon="fa-book"-->
                                <!--context="{'xml_id':'fleet_vehicle_log_contract_action'}"-->
                                <!--help="show the contract for this vehicle">-->
                                <!--<field name="contract_count" widget="statinfo" string="Contracts"/>-->
                            <!--</button>-->
                            <!--<button name="act_show_log_cost"-->
                                <!--type="object"-->
                                <!--class="oe_stat_button"-->
                                <!--icon="fa-usd"-->
                                <!--help="show all the costs for this vehicle"-->
                                <!--groups="fleet.fleet_group_manager">-->
                                <!--<field name="cost_count" widget="statinfo" string="Costs"/>-->
                            <!--</button>-->
                            <!--<button name="action_to_open"-->
                                <!--type="object"-->
                                <!--class="oe_stat_button"-->
                                <!--icon="fa-wrench"-->
                                <!--context="{'xml_id':'fleet_vehicle_log_services_action'}"-->
                                <!--help="show the services logs for this vehicle" >-->
                                <!--<field name="service_count" widget="statinfo" string="Services"/>-->
                            <!--</button>-->
                            <!--<button name="action_to_open"-->
                                <!--type="object"-->
                                <!--class="oe_stat_button"-->
                                <!--icon="fa-flask"-->
                                <!--context="{'xml_id':'fleet_vehicle_log_fuel_action'}"-->
                                <!--help="show the fuel logs for this vehicle" >-->
                                <!--<field name="fuel_logs_count" widget="statinfo" string="Fuel"/>-->
                            <!--</button>-->
                            <!--<button name="action_to_open"-->
                                <!--type="object"-->
                                <!--class="oe_stat_button"-->
                                <!--icon="fa-tachometer"-->
                                <!--context="{'xml_id':'fleet_vehicle_odometer_action'}"-->
                                <!--help="show the odometer logs for this vehicle" >-->
                                <!--<field name="total_odometer" widget="statinfo" string="Odometer"/>-->
                            <!--</button>-->
                        </div>
                        <field name="image_medium" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="inner_code" class="oe_edit_only"/>
                            <h1>
                                <field name="inner_code"/>
                            </h1>
                            <label for="license_plate" class="oe_edit_only"/>
                            <h2>
                                <field name="license_plate" class="oe_inline" placeholder="e.g. B88888"/>
                            </h2>
                            <label for="tag_ids" class="oe_edit_only"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        </div>

                        <notebook>
                            <page  string="General Properties">
                                <group col="2">
                                    <group>
                                        <field name="company_id" options="{'no_open':True,'no_create':True}"/>
                                        <field name="route_id" options="{'no_open':True,'no_create':True}"/>
                                        <field name="vin_sn"/>
                                        <field name="length_width_height"/>
                                        <field name="emission_standard"/>
                                        <field name="model_id" options="{'no_open':True,'no_create':True}" string="车型"/>
                                    </group>
                                    <group>
                                        <field name="vehicle_label"/>
                                    </group>
                                </group>
                            </page>
                            <page  string="Technical Properties">
                                <group>
                                    <field name="engine_no" />
                                    <field name="transmission_ext" />
                                    <field name="fuel_type_ext" />
                                    <label for="co2_ext"/>
                                    <div class="o_row">
                                        <field name="co2_ext"/><span>g/km</span>
                                    </div>
                                    <field name="horsepower_ext" />
                                    <label for="power_ext"/>
                                    <div class="o_row">
                                        <field name="power_ext"/><span>kW</span>
                                    </div>
                                    <field name="weight" />
                                </group>
                            </page>
                            <page string="Appearance Properties">
                                <group>
                                    <field name="doors_ext" />
                                    <field name="seats_ext" />
                                    <field name="color" />
                                    <field name="brand_name" />
                                </group>
                            </page>
                            <page string="Register Information">
                                <group>
                                    <field name="reg_no" />
                                    <field name="reg_date" />
                                    <field name="forced_destroy" />
                                    <field name="annual_inspection_date" />
                                    <field name="emissions"/>
                                </group>
                            </page>
                            <page string="Vehicle Device">
                                <field name="vehicle_device_ids">
									<tree editable="bottom">
                                        <field name="device_id" options="{'no_open':True,'no_create':True}"/>
										<field name="serial_no"/>
										<!--<field name="name"/>-->
										<field name="fixed_asset_number"/>
										<field name="create_date_ext"/>
									</tree>
								</field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                    </div>
                </form>
            </field>
        </record>

        <!-- VehicleModel Form-->
        <record id='fleet_vehicle_model_view_form_ext' model='ir.ui.view'>
            <field name="name">fleet.vehicle.model.form.ext</field>
            <field name="model">fleet.vehicle.model</field>
			<field name="type">form</field>
            <field name="priority">0</field>
			<field name="inherit_id" ref="fleet.fleet_vehicle_model_view_form"/>
            <field name="arch" type="xml">
				<xpath expr="//div[@class='oe_title']" position="after">
					<group col="3" >
                        <group>
                            <field name="code" />
                            <field name="specifications" />
							<label for="length"/>
							<div class="o_row">
                                   <field name="length"/><span>mm</span>
							</div>
							<field name="transmission_ext" />
                            <field name="horsepower_ext" />
							<label for="inner_height"/>
							<div class="o_row">
                                <field name="inner_height"/><span>mm</span>
							</div>
							<label for="front_distance"/>
							<div class="o_row">
                                <field name="front_distance"/><span>mm</span>
							</div>
							<label for="front_max_weight"/>
							<div class="o_row">
                                <field name="front_max_weight"/><span>kg</span>
							</div>
							<field name="driving_wheel_count"/>
                            <field name="fuel_capacity"/>
							<field name="deadline"/>
                        </group>
                        <group>
                        	<field name="engine_type_no" />
							<field name="fuel_type_ext" />
							<label for="width"/>
							<div class="o_row">
                                <field name="width"/><span>mm</span>
							</div>
							<label for="weight"/>
							<div class="o_row">
                                <field name="weight"/><span>kg</span>
							</div>
							<label for="rear_distance"/>
							<div class="o_row">
                                <field name="rear_distance"/><span>mm</span>
							</div>

							<label for="rear_max_weight"/>
							<div class="o_row">
                                <field name="rear_max_weight"/><span>kg</span>
							</div>
							<label for="turn_radius"/>
							<div class="o_row">
                                <field name="turn_radius"/><span>m</span>
							</div>
							<field name="fuel_consumption_pre_hund"/>
                            <field name="manufacturers"/>
                        </group>
						<group>
							<field name="co2_ext" />
							<field name="chassis_no" />
							<label for="height"/>
							<div class="o_row">
                                <field name="height"/><span>mm</span>
							</div>
							<field name="doors_ext" />
							<field name="seats_ext"/>
							<label for="shaft_distance"/>
							<div class="o_row">
                                <field name="shaft_distance"/><span>mm</span>
							</div>
							<field name="wheel_count"/>
							<label for="max_climb"/>
							<div class="o_row">
                                <field name="max_climb"/><span>%</span>
							</div>
						</group>
                    </group>
                </xpath>
            </field>
        </record>


		<!--EmissionStandard   form view -->
        <record model="ir.ui.view" id="fleet_manage_vehicle_emission_standard_form">
            <field name="name">EmissionStandard.form</field>
            <field name="model">fleet_manage_vehicle.emission_standard</field>
            <field name="arch" type="xml">
                <form string="EmissionStandard Form">
                    <sheet>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="remark"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Vehicle Action -->
        <record id='fleet_manage_vehicle_action' model='ir.actions.act_window'>
            <field name="name">fleet_manage_vehicle_action</field>
            <field name="res_model">fleet.vehicle</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new vehicle.
              </p><p>
                You will be able to manage your fleet by keeping track of the
                contracts, services, fixed and recurring costs, odometers and
                fuel logs associated to each vehicle.
            </p><p>
                Odoo will warn you when services or contract have to be
                renewed.
              </p>
            </field>
        </record>


        <!-- VehicleModel Action -->
		<record model="ir.actions.act_window" id="fleet_manage_vehicle_model_action">
	        <field name="name">fleet_manage_vehicle_model_action</field>
	        <field name="res_model">fleet.vehicle.model</field>
	        <field name="view_mode">tree,form</field>
		</record>

        <!-- Emission Standard Action -->
		<record model="ir.actions.act_window" id="fleet_manage_vehicle_emission_standard_action">
	        <field name="name">fleet_manage_vehicle_emission_standard_action</field>
	        <field name="res_model">fleet_manage_vehicle.emission_standard</field>
	        <field name="view_mode">tree,form</field>
		</record>


        <menuitem name="fleet_manage_vehicle"
                id="fleet_manage_vehicle"
                parent="fleet_manage_menu.fleet_manage_basic"
                action = "fleet_manage_vehicle_action"
                sequence="1"/>


        <menuitem name="fleet_manage_vehicle_model"
				  id="fleet_manage_vehicle_model"
				  parent="fleet_manage_menu.fleet_manage_menu_data"
				  action = "fleet_manage_vehicle_model_action"
				  sequence="40"
				  />
        <menuitem name="fleet_manage_vehicle_emission_standard"
				  id="fleet_manage_vehicle_emission_standard"
				  parent="fleet_manage_menu.fleet_manage_menu_data"
				  action = "fleet_manage_vehicle_emission_standard_action"
				  sequence="50"
				  />


    </data>
</odoo>