<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- 区域管理 -->
        <record model="ir.ui.view" id="region_tree_view">
            <field name="name">region tree view</field>
            <field name="model">region_manage.region_manage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="region_coding"/>
                    <field name="region_name"/>
                    <field name="create_time"/>
                    <field name="book_runner"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="region_form_view">
            <field name="name">region form view</field>
            <field name="model">region_manage.region_manage</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="do_archive" states="inuse" string="Archive" type="object" class="oe_highlight"/>
                        <button name="do_inuse" states="archive" string="Reset" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <!--<label for="name"/>-->
                            <h1>
                                <field name="region_name" placeholder="Region name"/>
                            </h1>
                        </div>
                        <group col="2">
                            <group>
                                <field name="region_coding"/>
                                <field name="book_runner"/>
                            </group>
                            <group>
                                <field name="create_time"/>
                                <!--<field name="status"/>-->
                            </group>
                        </group>

                        <notebook>
                            <page string="Road list">
                                <field name="road_id"/>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- 道路管理 -->
        <record model="ir.ui.view" id="road_tree_view">
            <field name="name">road tree view</field>
            <field name="model">road_manage.road_manage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="road_coding"/>
                    <field name="road_name"/>
                    <field name="create_date"/>
                    <field name="book_runner"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="road_form_view">
            <field name="name">road form view</field>
            <field name="model">road_manage.road_manage</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="do_archive" states="inuse" string="Archive" type="object" class="oe_highlight"/>
                        <button name="do_inuse" states="archive" string="Reset" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <!--<label for="name"/>-->
                            <h1>
                                <field name="road_name" placeholder="Road name"/>
                            </h1>
                        </div>
                        <group col="2">
                            <group>
                                <field name="road_coding"/>
                                <field name="book_runner"/>
                            </group>
                            <group>
                                <field name="create_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Station List">
                                <field name="platform_id"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 站台管理 -->
        <record model="ir.ui.view" id="station_tree_view">
            <field name="name">platform tree view</field>
            <field name="model">platform_manage.platform_manage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="longitude"/>
                    <field name="latitude"/>
                    <field name="platform_number"/>
                    <field name="platform"/>
                    <field name="entrance_azimuth"/>
                    <field name="entrance_longitude"/>
                    <field name="entrance_latitude"/>
                    <field name="exit_azimuth"/>
                    <field name="exit_longitude"/>
                    <field name="exit_latitude"/>
                    <field name="platform_status"/>
                    <field name="electronic_bus_board_number"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="station_form_view">
            <field name="name">platform form view</field>
            <field name="model">platform_manage.platform_manage</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="do_archive" states="inuse" string="Archive" type="object" class="oe_highlight"/>
                        <button name="do_inuse" states="archive" string="Reset" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <!--<label for="name"/>-->
                            <h1>
                                <field name="platform" placeholder="Platform"/>
                            </h1>
                        </div>
                        <group col="3">
                            <group>
                                <field name="longitude"/>
                                <field name="entrance_azimuth"/>
                                <field name="entrance_longitude"/>
                                <field name="entrance_latitude"/>
                            </group>
                            <group>
                                <field name="latitude"/>
                                <field name="exit_azimuth"/>
                                <field name="exit_longitude"/>
                                <field name="exit_latitude"/>
                            </group>
                            <group>
                                <field name="platform_number"/>
                                <field name="platform_status"/>
                                <field name="electronic_bus_board_number"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Cross line">
                                <field name="route_id"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 线路管理 -->
        <record model="ir.ui.view" id="route_tree_view">
            <field name="name">route tree view</field>
            <field name="model">route_manage.route_manage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="route"/>
                    <field name="routeNO"/>
                    <field name="route_type"/>
                    <field name="first_half_class"/>
                    <field name="oil_wear_coefficient"/>
                    <field name="class_system"/>
                    <field name="shunt_mode"/>
                    <field name="schedule_type"/>
                    <field name="subsidiary"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="route_form_view">
            <field name="name">route form view</field>
            <field name="model">route_manage.route_manage</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="do_archive" states="inuse" string="Archive" type="object" class="oe_highlight"/>
                        <button name="do_inuse" states="archive" string="Reset" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <!--<label for="name"/>-->
                            <h1>
                                <field name="route" placeholder="Route"/>
                            </h1>
                        </div>

                        <group col="2">
                            <group>
                                <field name="routeNO"/>
                                <field name="route_type"/>
                                <field name="first_half_class"/>
                                <field name="oil_wear_coefficient"/>
                            </group>
                            <group>
                                <field name="class_system"/>
                                <field name="shunt_mode"/>
                                <field name="schedule_type"/>
                                <field name="subsidiary"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="platform resource">
                                <field name="platform_resource"/>
                            </page>
                            <page string="vehicle resource"></page>
                            <page string="human resource">
                                <field name="human_resource"/>
                            </page>
                            <page string="people per cars">
                                <group>
                                    <field name="driver_per_vehicle"/>
                                    <field name="steward_per_vehicle"/>
                                    <field name="line_synthesis_person_per_vehicle"/>

                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 调度参数管理——Action -->
        <record model="ir.actions.act_window" id="act_region">
            <field name="name">Region list</field>
            <field name="res_model">region_manage.region_manage</field>
            <field name="view_model">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="act_road_manage">
            <field name="name">Road list</field>
            <field name="res_model">road_manage.road_manage</field>
            <field name="view_model">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="act_station_manage">
            <field name="name">Platform list</field>
            <field name="res_model">platform_manage.platform_manage</field>
            <field name="view_model">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="act_route_manage">
            <field name="name">Line list</field>
            <field name="res_model">route_manage.route_manage</field>
            <field name="view_model">tree,form</field>
        </record>


        <!-- 调度参数管理——Menu -->
        <menuitem id="menu_region" name="Regional management" parent="operation_menu.schedule_menu"
                  action="act_region"/>
        <menuitem id="menu_road" name="Road management" parent="operation_menu.schedule_menu" action="act_road_manage"/>
        <menuitem id="menu_station" name="Platform management" parent="operation_menu.schedule_menu"
                  action="act_station_manage"/>
        <menuitem id="menu_route" name="Line management" parent="operation_menu.schedule_menu"
                  action="act_route_manage"/>
    </data>
</odoo>