<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- 区域管理 -->
        <record model="ir.ui.view" id="area_tree_view">
            <field name="name">area tree view</field>
            <field name="model">opertation_resources_area</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="area_form_view">
            <field name="name">area form view</field>
            <field name="model">opertation_resources_area</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="do_archive" states="inuse" string="Archive" type="object" class="oe_highlight"/>
                        <button name="do_inuse" states="archive" string="Reset" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <!--<label for="name"/>-->
                            <h1>
                                <field name="name" placeholder="Area name"/>
                            </h1>
                        </div>
                        <group col="2">
                            <group>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Road list">
                                <field name="road_ids" readonly="1">
                                    <tree>
                                         <field name="code"/>
										 <field name="name"/>
										 <field name="create_date"/>
										 <field name="create_uid"/>
										 <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- 道路管理 -->
        <record model="ir.ui.view" id="road_tree_view">
            <field name="name">road tree view</field>
            <field name="model">opertation_resources_road</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="area_id"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="road_form_view">
            <field name="name">road form view</field>
            <field name="model">opertation_resources_road</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="do_archive" states="inuse" string="Archive" type="object" class="oe_highlight"/>
                        <button name="do_inuse" states="archive" string="Reset" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <!--<label for="name"/>-->
                            <h1>
                                <field name="name" placeholder="Road name"/>
                            </h1>
                        </div>
                        <group col="2">
                            <group>
                                <field name="code"/>
                                <field name="area_id" options="{'no_open':True,'no_create':True}"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Stations">
                                <field name="station_ids" readonly="1">
                                    <tree string="Stations">
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="create_date"/>
                                        <field name="station_condition"/>
                                        <field name="longitude"/>
                                        <field name="latitude"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 站台管理 -->
        <record model="ir.ui.view" id="station_tree_view">
            <field name="name">station tree view</field>
            <field name="model">opertation_resources_station</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="entrance_azimuth"/>
                    <field name="entrance_longitude"/>
                    <field name="entrance_latitude"/>
                    <field name="exit_azimuth"/>
                    <field name="exit_longitude"/>
                    <field name="exit_latitude"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="station_form_view">
            <field name="name">station form view</field>
            <field name="model">opertation_resources_station</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="do_archive" states="inuse" string="Archive" type="object" class="oe_highlight"/>
                        <button name="do_inuse" states="archive" string="Reset" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <!--<label for="name"/>-->
                            <h1>
                                <field name="name" placeholder="Station"/>
                            </h1>
                        </div>
                        <group col="3">
                            <group>
                                <field name="longitude"/>
                                <field name="entrance_azimuth"/>
                                <field name="entrance_longitude"/>
                                <field name="entrance_latitude"/>
                            </group>
                            <group>
                                <field name="latitude"/>
                                <field name="exit_azimuth"/>
                                <field name="exit_longitude"/>
                                <field name="exit_latitude"/>
                            </group>
                            <group>
                                <field name="code"/>
                                <field name="station_condition"/>
                                <field name="electronic_bus_board_number"/>
                                <field name="road_id" options="{'no_open':True,'no_create':True}"/>
                            </group>
                        </group>

                        <notebook>
                            <!--<page string="Cross line">-->
                                <!--<field name="route_id"/>-->
                            <!--</page>-->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 线路管理 -->
        <record model="ir.ui.view" id="route_tree_view">
            <field name="name">route tree view</field>
            <field name="model">route_manage.route_manage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="route"/>
                    <field name="route_coding"/>
                    <field name="route_type"/>
                    <field name="class_system"/>
                    <field name="schedule_type"/>
                    <field name="people_number"/>
                    <field name="subsidiary"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="route_form_view">
            <field name="name">route form view</field>
            <field name="model">route_manage.route_manage</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="do_archive" states="inuse" string="Archive" type="object" class="oe_highlight"/>
                        <button name="do_inuse" states="archive" string="Reset" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <!--<label for="name"/>-->
                            <h1>
                                <field name="route" placeholder="Route"/>
                            </h1>
                        </div>

                        <group col="2">
                            <group>
                                <field name="route_coding"/>
                                <field name="route_type"/>
                                <field name="first_half_class"/>
                                <field name="oil_wear_coefficient"/>
                            </group>
                            <group>
                                <field name="class_system"/>
                                <field name="shunt_mode"/>
                                <field name="schedule_type"/>
                                <field name="subsidiary" options="{'no_create':True}"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="platform resource" name="platform_page">
                                <field name="platform_resource"/>
                            </page>
                            <page string="human resource" name="hr_page">
                                <field name="human_resource"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 调度参数管理——Action -->
        <record model="ir.actions.act_window" id="act_area_manage">
            <field name="name">act_area_manage</field>
            <field name="res_model">opertation_resources_area</field>
            <field name="view_model">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="act_road_manage">
            <field name="name">act_road_manage</field>
            <field name="res_model">opertation_resources_road</field>
            <field name="view_model">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="act_station_manage">
            <field name="name">act_station_manage</field>
            <field name="res_model">opertation_resources_station</field>
            <field name="view_model">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="act_route_manage">
            <field name="name">act_route_manage</field>
            <field name="res_model">route_manage.route_manage</field>
            <field name="view_model">tree,form</field>
        </record>

        <!-- 调度参数管理——Menu -->
        <menuitem id="menu_area"
                  name="Area management"
                  parent="dispatch_monitor_menu.opertation_resources_menu"
                  action="act_area_manage"
                  sequence="10"/>
        <menuitem id="menu_road"
                  name="Road management"
                  parent="dispatch_monitor_menu.opertation_resources_menu"
                  action="act_road_manage"
                  sequence="20"
        />
        <menuitem id="menu_station"
                  name="Station management"
                  parent="dispatch_monitor_menu.opertation_resources_menu"
                  action="act_station_manage"
                  sequence="30"
        />
        <menuitem id="menu_route"
                  name="Route management"
                  parent="dispatch_monitor_menu.opertation_resources_menu"
                  action="act_route_manage"
                  sequence="40"
        />
    </data>
</odoo>