            </field>
        </record>

        <!-- 超速记录 form -->
        <record model="ir.ui.view" id="overspeed_record_form">
            <field name="name">Overspeed Record</field>
            <field name="model">overspeed_record</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2">
