                                <field name="occurrence_time"/>
                                <field name="location"/>
                                <field name="route_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="vehicle_id" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="job_number"/>
