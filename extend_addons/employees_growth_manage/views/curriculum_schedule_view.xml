              <button name="examination_to_complete" type="object" string="examination_to_complete" states="examination" class="oe_highlight"/>
              <field name="state"  widget="statusbar"/>
            </header>
            <sheet>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" placeholder="Curriculum Schedule's Name" />
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="curriculum_no"/>
                        <field name="course_id" options="{'no_open': True, 'no_create': True}"/>
                        <field name="start_time" />
                        <field name="end_time" />
                    </group>
                    <group>
                        <field name="train_type"/>
                        <field name="course_type"/>
                        <field name="teacher_id" options="{'no_open': True, 'no_create': True}"/>
                        <field name="address"/>
                    </group>
                </group>
