<openerp>
    <data>

        <record model="ir.ui.view" id="sfs_fire_device_manage_tree">
            <field name="name">fire_device_manage tree</field>
            <field name="model">sfs.fire_device_manage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="owner"/>
                    <field name="use_position"/>
                    <field name="dispatch_date"/>
                    <field name="serial_number"/>
                    <field name="technician"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sfs_fire_device_manage_form">
            <field name="name">fire_device_manage form</field>
            <field name="model">sfs.fire_device_manage</field>
            <field name="arch" type="xml">
                <form string="Idea form">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="fire device name hint"/>
                            </h1>
                        </div>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="device_category"/>
                                <field name="owner"/>
                            </group>

                            <group name="group_right">
                                <field name="maintenance_team"/>
                                <field name="technician"/>
                                <field name="dispatch_date"/>
                                <field name="scrap_date"/>
                                <field name="use_position"/>
                            </group>

                        </group>
                        <notebook>
                            <page string="description">

                            </page>
                            <page string="product information">

                            </page>
                            <page string="maintenance">

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>