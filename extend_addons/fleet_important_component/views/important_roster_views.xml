<openerp>
  <data>


    <!--部件名册-->
    <record id="fleet_important_roster_form" model="ir.ui.view">
        <field name="name">Important Roster form</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_medium" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Product Name"/>
                        <h1><field name="name" placeholder="Product Name"/></h1>
                    </div>

                        <notebook>
                            <page string="general_info" name="general_info">
                                <group name="general_top">
                                    <group name="general_top_left">
                                        <field name="classification_id" string="部件分类"/>
                                        <field name="inter_code"/>
                                    </group>
                                    <group name="general_top_right">
                                        <div name="options">
                                            <div class="col-sm-2">
                                                <div class="oe_title">
                                                    <label class="oe_edit_only" for="name" string="Component Type"/>
                                                </div>
                                            </div>
                                            <div class="col-sm-10">
                                                <field name="component_type" widget="radio"/>
                                            </div>

                                        </div>
                                    </group>
                                </group>
                                <group name="general_bottom">
                                    <group name="general_bottom_left">

                                        <field name="require_trans"/>
                                        <field name="lifetime"/>
                                        <field name="vehicle_model" widget="many2many_tags"/>

                                    </group>
                                    <group name="general_bottom_right">
                                        <field name="weight"/>
                                        <field name="volume"/>
                                        <field name="special_attributes"/>
                                    </group>
                                </group>
                            </page>
                            <page string="component_ids" name="tech_info">
                                <field name="component_ids">
                                    <tree editable="top">
                                        <field name="code"/>
                                        <field name="display_name"/>
                                        <field name="odometer"/>
                                        <field name="state"/>
                                        <field name="location_id"/>
                                        <field name="create_date"/>
                                        <field name="checkout_date"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="component_info" string="component_info"
                                  attrs="{'invisible': [('component_type', '=', 'is_spare_parts')]}">
                                <field name="product_ids">
                                    <tree editable="top">
                                        <field name="father_product_id"/>
                                        <field name="inter_code"/>
                                        <field name="name" readonly="1"/>
                                        <field name="attribute_value_ids" readonly="1"/>
                                        <field name="qty_available" readonly="1"/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="fleet_important_roster_tree" model="ir.ui.view">
        <field name="name">Important Roster tree</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="default_code" string="Materials Code"/>
                <field name="name"/>
                <field name="categ_id" string="Materials Type"/>
                <field name="barcode"/>
                <field name="vehicle_model"/>
                <field name="keeper_id"/>
                <field name="special_attributes"/>
                <field name="qty_available"/>
                <field name="virtual_available"/>
            </tree>
        </field>
    </record>

    <!--部件名册-->
    <record id="act_fleet_important_roster" model="ir.actions.act_window">
            <field name="name">Important Roster</field>
            <field name="res_model">product.product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('important_type','=','component')]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('fleet_important_roster_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('fleet_important_roster_form')})]"/>
    </record>

    <!--重要部件管理-->
    <menuitem name="fleet_important_component" id="fleet_important_component" parent="fleet_manage_menu.fleet_manage_menu_root"/>

    <!-- menu categories -->
    <menuitem name="fleet_important_roster" id="fleet_important_roster" sequence="30" parent="fleet_important_component" action="act_fleet_important_roster"/>





  </data>
</openerp>