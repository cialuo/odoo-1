<odoo>
	<data>
		<!-- FaultCategory  tree -->
        <record model="ir.ui.view" id="fleet_manage_fault_category_view_tree">
            <field name="name">FaultCategory.tree</field>
            <field name="model">fleet_manage_fault.category</field>
            <field name="arch" type="xml">
                <tree string="FaultCategory Tree">
                    <field name="fault_category_code"/>
					<field name="name"/>
					<field name="user_id"/>
					<field name="create_date"/>
					<field name="state"/>
                </tree>
            </field>
        </record>
		<!-- FaultAppearance  tree -->
        <record model="ir.ui.view" id="fleet_manage_fault_appearance_view_tree">
            <field name="name">FaultAppearance.tree</field>
            <field name="model">fleet_manage_fault.appearance</field>
            <field name="arch" type="xml">
                <tree string="FaultAppearance Tree">
                    <field name="fault_appearance_code"/>
					<field name="name"/>
					<field name="category_id"/>
					<field name="user_id"/>
					<field name="create_date"/>
					<field name="state"/>
                </tree>
            </field>
        </record>
		
		<!-- FaultReason  tree -->
        <record model="ir.ui.view" id="fleet_manage_fault_reason_view_tree">
            <field name="name">FaultReason.tree</field>
            <field name="model">fleet_manage_fault.reason</field>
            <field name="arch" type="xml">
                <tree string="FaultReason Tree">
                    <field name="fault_reason_code"/>
					<field name="name"/>
					<field name="appearance_id"/>
					<field name="category_id"/>
					<field name="user_id"/>
					<field name="create_date"/>
					<field name="state"/>
                </tree>
            </field>
        </record>
		
		<!-- FaultMethod  tree -->
        <record model="ir.ui.view" id="fleet_manage_fault_method_view_tree">
            <field name="name">FaultMethod.tree</field>
            <field name="model">fleet_manage_fault.method</field>
            <field name="arch" type="xml">
                <tree string="FaultMethod Tree">
                    <field name="fault_method_code"/>
					<field name="name"/>
					<field name="reason_id"/>
					<field name="appearance_id"/>
					<field name="category_id"/>
					<field name="work_time"/>
                    <field name="complex_level"/>
					<field name="user_id"/>
					<field name="create_date"/>
					<field name="state"/>
                </tree>
            </field>
        </record>
		
		<!-- FaultCategory form view -->
        <record model="ir.ui.view" id="fleet_manage_fault_category_view_form">
            <field name="name">FaultCategory.form</field>
            <field name="model">fleet_manage_fault.category</field>
            <field name="arch" type="xml">
                <form string="FaultCategory Form">
                	<header>
                		<!--<button name="action_draft" type="object"-->
                                <!--string="Reset to draft"-->
                                <!--states="use"/>-->
                        <button name="action_use" type="object"
                                string="Reset"
								states="done"
                                class="oe_highlight"/>
                        <button name="action_done" type="object"
                                string="Mark as done" 
								states="use"
                                class="oe_highlight"/>
                    	<field name="state"  widget="statusbar" clickable="True" />
                	</header>
					<sheet>
						<div class="oe_title">
	                        <label for="name" class="oe_edit_only"/>
	                        <h1><field name="name"/></h1>
	                    </div>
						 <group col="2">
	                        <group>
	                        	<field name="user_id" readonly="1"/>
	                            <field name="create_date" />
	                        </group>
	                        <group>
	                            <field name="fault_category_code" />
	                        </group>
                   		 </group>
						 
						 <notebook>
							<page string="FaultAppearance">
                                <field name="appearance_ids">
                                    <tree string="FaultAppearance">
										<field name="name"/>
										<field name="reason_ct"/>
										<field name="sequence"/>
                                    </tree>
                                </field>
                            </page>
							
							<page string="No FaultAppearance">
                                <field name="reason_ids">
                                    <tree string="FaultReason">
										<field name="name"/>
										<field name="method_ct"/>
										<field name="sequence"/>
                                    </tree>
                                </field>
                            </page>
			            </notebook>
					</sheet>
                </form>
            </field>
        </record>
		
		
		<!-- FaultAppearance form view -->
        <record model="ir.ui.view" id="fleet_manage_fault_appearance_view_form">
            <field name="name">FaultAppearance.form</field>
            <field name="model">fleet_manage_fault.appearance</field>
            <field name="arch" type="xml">
                <form string="FaultAppearance Form">
					<header>
                		<!--<button name="action_draft" type="object"-->
                                <!--string="Reset to draft"-->
                                <!--states="use"/>-->
                        <button name="action_use" type="object"
                                string="Reset"
								states="done"
                                class="oe_highlight"/>
                        <button name="action_done" type="object"
                                string="Mark as done"
								states="use"
                                class="oe_highlight"/>
                    	<field name="state"  widget="statusbar" clickable="True" />
                	</header>
					<sheet>
						<div class="oe_title">
	                        <label for="name" class="oe_edit_only"/>
	                        <h1><field name="name"/></h1>
	                    </div>
						 <group col="2">
	                        <group>
	                        	<field name="category_id" />
								<field name="inner_code" />
								<field name="sequence"/>
	                        </group>
	                        <group>

	                            <field name="fault_appearance_code" />
								<field name="user_id" />
								<field name="create_date" />
	                        </group>
                   		 </group>
 						 <notebook>
							<page string="FaultReasons">
                                <field name="reason_ids">
                                    <tree string="FaultReasons">
										<field name="name"/>
										<field name="method_ct"/>
										<field name="sequence"/>
                                    </tree>
                                </field>
                            </page>
			            </notebook>
					</sheet>
                </form>
            </field>
        </record>
		
		
		
		<!-- FaultReason form view -->
        <record model="ir.ui.view" id="fleet_manage_fault_reason_view_form">
            <field name="name">FaultReason.form</field>
            <field name="model">fleet_manage_fault.reason</field>
            <field name="arch" type="xml">
                <form string="FaultReason Form">
					<header>
                		<!--<button name="action_draft" type="object"-->
                                <!--string="Reset to draft"-->
                                <!--states="use"/>-->
                        <button name="action_use" type="object"
                                string="Reset"
								states="done"
                                class="oe_highlight"/>
                        <button name="action_done" type="object"
                                string="Mark as done"
								states="use"
                                class="oe_highlight"/>
                    	<field name="state"  widget="statusbar" clickable="True" />
                	</header>
					<sheet>
						<div class="oe_title">
	                        <label for="name" class="oe_edit_only"/>
	                        <h1><field name="name"/></h1>
	                    </div>
						 <group col="2">
	                        <group>
	                        	<field name="category_id" />
								<field name="appearance_id" />
								<field name="inner_code" />
	                        </group>
	                        <group>
	                            <field name="fault_reason_code" />
								<field name="user_id" />
								<field name="create_date" />
	                        </group>
                   		 </group>
  						 <notebook>
							<page string="FaultMethods">
                                <field name="method_ids">
                                    <tree string="FaultMethods">
                                    	 <field name="name"/>
										 <field name="work_time"/>
										 <field name="complex_level"/>
										 <field name="warranty_deadline"/>
										 <field name="remark"/>
                                    </tree>
                                </field>
                            </page>
			            </notebook>
					</sheet>
                </form>
            </field>
        </record>
		
		
		<!-- FaultMethod form view -->
        <record model="ir.ui.view" id="fleet_manage_fault_method_view_form">
            <field name="name">FaultMethod.form</field>
            <field name="model">fleet_manage_fault.method</field>
            <field name="arch" type="xml">
                <form string="FaultMethod Form">
                	<header>
                		<!--<button name="action_draft" type="object"-->
                                <!--string="Reset to draft"-->
                                <!--states="use"/>-->
                        <button name="action_use" type="object"
                                string="Reset"
								states="done"
                                class="oe_highlight"/>
                        <button name="action_done" type="object"
                                string="Mark as done"
								states="use"
                                class="oe_highlight"/>
                    	<field name="state"  widget="statusbar" clickable="True" />
                	</header>
					<sheet>
						<div class="oe_title">
	                        <label for="name" class="oe_edit_only"/>
	                        <h1><field name="name"/></h1>
	                    </div>
						 <group col="2">
	                        <group>
	                        	<field name="category_id" />
								<field name="appearance_id" />
								<field name="reason_id" />
								<field name="inner_code" />
	                        </group>
	                        <group>
	                            <field name="fault_method_code" />
								<field name="user_id" />
								<field name="create_date" />
	                        </group>
                   		 </group>
						 
						 <group col="2">
	                        <group>
	                        	<field name="work_time" />
								<field name="warranty_deadline" />
								<field name="complex_level" />
								<field name="materials_control" />
	                        </group>
	                        <group>
								<field name="is_important_product"/>
								<field name="important_product_id" attrs="{'invisible':[('is_important_product','=',False)]}" widget="selection"/>
	                            <field name="remark" />
	                        </group>
                   		 </group>
						 <notebook>
							<page name="Operation Manual" string="Operation Manual">
								<field name="operation_manual"/>
							</page>
							<page name="Inspect Standard" string="Inspect Standard">
								<field name="inspect_standard"/>
							</page>

							<page name="AvailProducts" string="AvailProducts" attrs="{'invisible':[('materials_control','=',False)] }">
								<field name="avail_ids"  >
									<tree editable="bottom">
										<field name="product_id"/>
										<field name="product_code"/>
										<field name="categ_id"/>
										<field name="description"/>
										<field name="uom_id"/>
										<field name="vehicle_model" widget="many2many_tags"/>
										<field name="require_trans"/>

										<field name="change_count"/>
										<field name="max_count"/>
										<field name="remark"/>
										<field name="onhand_qty"/>
										<field name="virtual_available"/>
									</tree>
								</field>
							</page>
						 </notebook>
					</sheet>
                </form>
            </field>
        </record>


		<!-- FaultCategory Action -->
		<record model="ir.actions.act_window" id="fleet_manage_fault_category_action">
	      <field name="name">fleet_manage_fault_category_action</field>
	      <field name="res_model">fleet_manage_fault.category</field>
	      <field name="view_mode">tree,form</field>
		</record>
		
		<!-- FaultAppearance Action -->
		<record model="ir.actions.act_window" id="fleet_manage_fault_appearance_action">
	      <field name="name">fleet_manage_fault_appearance_action</field>
	      <field name="res_model">fleet_manage_fault.appearance</field>
	      <field name="view_mode">tree,form</field>
		</record>
		
		<!-- FaultReason Action -->
		<record model="ir.actions.act_window" id="fleet_manage_fault_reason_action">
	      <field name="name">fleet_manage_fault_reason_action</field>
	      <field name="res_model">fleet_manage_fault.reason</field>
	      <field name="view_mode">tree,form</field>
		</record>
		
		
		<!-- FaultMethod Action -->
		<record model="ir.actions.act_window" id="fleet_manage_fault_method_action">
	      <field name="name">fleet_manage_fault_method_action</field>
	      <field name="res_model">fleet_manage_fault.method</field>
	      <field name="view_mode">tree,form</field>
		</record>

		<!-- FaultMethod Action -->
		<record model="ir.actions.act_window" id="fleet_manage_fault_maintain_type_action">
	      <field name="name">fleet_manage_fault_maintain_type_action</field>
	      <field name="res_model">fleet_manage_fault.fault_maintain_type</field>
	      <field name="view_mode">tree,form</field>
		</record>



	    <menuitem name="fleet_manage_fault_category" 
				  id="fleet_manage_menu_fault_category" 
				  parent="fleet_manage_menu.fleet_manage_menu_data" 
				  action = "fleet_manage_fault_category_action"
				  />
	    <menuitem name="fleet_manage_fault_appearance" 
				  id="fleet_manage_menu_fault_appearance" 
				  parent="fleet_manage_menu.fleet_manage_menu_data" 
				  action = "fleet_manage_fault_appearance_action"
				  />		
  	    <menuitem name="fleet_manage_fault_reason" 
				  id="fleet_manage_menu_fault_reason" 
				  parent="fleet_manage_menu.fleet_manage_menu_data" 
				  action = "fleet_manage_fault_reason_action"
				  />	  
  	    <menuitem name="fleet_manage_fault_method" 
				  id="fleet_manage_menu_fault_method" 
				  parent="fleet_manage_menu.fleet_manage_menu_data" 
				  action = "fleet_manage_fault_method_action"
				  />
		<menuitem name="fleet_manage_fault_maintain_type"
				  id="fleet_manage_menu_fault_maintain_type"
				  parent="fleet_manage_menu.fleet_manage_menu_data"
				  action = "fleet_manage_fault_maintain_type_action"
				  />
				  		  
				  
	</data>
</odoo>