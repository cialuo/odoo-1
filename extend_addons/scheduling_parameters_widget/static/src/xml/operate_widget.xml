<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="line_passenger_flow_template">
        <div>
            <div class="operate_title">
                
            </div>
            <div class="operate_cont">
                
            </div>
        </div>
    </t>

    <t t-name="line_passenger_flow_title_template">
        <div class="title"><t t-esc="widget.argObj.title"></t></div>
        <div class="screening">
            <t t-if="widget.argObj.history_passenger_flow">
                <p class="history_passenger_flow part_block">
                    历史客流日期范围
                    <select name="history_time" id="">
                        <t t-foreach="widget.argObj.history_passenger_flow" t-as="item">
                            <option t-attf-value="{{item.id}}"><t t-esc="item.name"></t></option>
                        </t>
                    </select>
                </p>
            </t>
            <p class="predict_passenger_flow_time part_block">
                预测客流日期选择
                <input class="oe_datepicker_input predict_time" type="text" t-attf-value="{{widget.argObj.predict_passenger_flow_time}}" />
            </p>

            <ul class="swt_box plan_way">
                <t t-foreach="widget.argObj.plan_way" t-as="item">
                    <t t-if="item_index==0">
                        <li class="active" t-attf-name="{{item.type}}"><t t-esc="item.name"></t></li>    
                    </t>
                    <t t-else="">
                        <li t-attf-name="{{item.type}}"><t t-esc="item.name"></t></li>
                    </t>
                </t>
            </ul>
        </div>
        <div class="screening">
            <t t-if="widget.argObj.line_list">
                <p class="line part_block">
                    线路
                    <select name="line" id="">
                        <t t-foreach="widget.argObj.line_list" t-as="item">
                            <option t-attf-value="{{item.id}}"><t t-esc="item.name"></t></option>
                        </t>
                    </select>
                    <t t-if="widget.argObj.direction">
                        <select class="direction" name="direction" id="">
                            <t t-foreach="widget.argObj.direction" t-as="item">
                                <option t-attf-value="{{item.id}}"><t t-esc="item.name"></t></option>
                            </t>
                        </select>
                    </t>
                </p>
            </t>
            <t t-if="widget.argObj.data_type">
                <p class="data_type part_block">
                    日期类型
                    <select name="" id="">
                        <t t-foreach="widget.argObj.data_type" t-as="item">
                            <option t-attf-value="{{item.id}}"><t t-esc="item.name"></t></option>
                        </t>
                    </select>
                </p>
            </t>
            <p class="predict_passenger_flow part_block data_scope dis_none">
                日期范围
                <input class="start_time oe_datepicker_input" type="text" t-attf-value="{{widget.argObj.data_scope[0]}}" />
                <input class="end_time oe_datepicker_input" type="text" t-attf-value="{{widget.argObj.data_scope[1]}}" />
            </p>
            <a class="ok_bt" href="javascript:;">确定</a>
        </div>
    </t>

    <t t-name="site_passenger_flow_title_template">
        <div class="title"><t t-esc="widget.argObj.title"></t></div>
        <div class="screening">
            <p class="predict_passenger_flow part_block data_scope">
                日期范围
                <input class="start_time oe_datepicker_input" type="text" t-attf-value="{{widget.argObj.data_scope[0]}}" />
                <input class="end_time oe_datepicker_input" type="text" t-attf-value="{{widget.argObj.data_scope[1]}}" />
            </p>
            <ul class="swt_box plan_way">
                <t t-foreach="widget.argObj.plan_way" t-as="item">
                    <t t-if="item_index==0">
                        <li class="active" t-attf-name="{{item.type}}"><t t-esc="item.name"></t></li>    
                    </t>
                    <t t-else="">
                        <li t-attf-name="{{item.type}}"><t t-esc="item.name"></t></li>
                    </t>
                </t>
            </ul>
        </div>
        <div class="screening">
            <t t-if="widget.argObj.line_list">
                <p class="line part_block">
                    线路
                    <select name="line" id="">
                        <t t-foreach="widget.argObj.line_list" t-as="item">
                            <option t-attf-value="{{item.id}}"><t t-esc="item.name"></t></option>
                        </t>
                    </select>
                    <t t-if="widget.argObj.direction">
                        <select class="direction" name="direction" id="">
                            <t t-foreach="widget.argObj.direction" t-as="item">
                                <option t-attf-value="{{item.id}}"><t t-esc="item.name"></t></option>
                            </t>
                        </select>
                    </t>
                </p>
            </t>
            <t t-if="widget.argObj.data_type">
                <p class="data_type part_block">
                    日期类型
                    <select name="" id="">
                        <t t-foreach="widget.argObj.data_type" t-as="item">
                            <option t-attf-value="{{item.id}}"><t t-esc="item.name"></t></option>
                        </t>
                    </select>
                </p>
            </t>
            <t t-if="widget.argObj.platform">
                <p class="platform part_block">
                    站台
                    <select name="" id="">
                        <t t-foreach="widget.argObj.platform" t-as="item">
                            <option t-attf-value="{{item.id}}" t-attf-name="{{item.name}}"><t t-esc="item.name"></t></option>
                        </t>
                    </select>
                </p>
            </t>
            <a class="ok_bt" href="javascript:;">确定</a>
        </div>
    </t>

    <t t-name="line_hour_chart_template">
        <div class="line_chart">
            <div style="width: 1040px;height: 380px;" class="chart_passenger_flow"></div>
            <div class="chart_peak">
                <canvas class="chart_peak_canvas" width="750" height="8"></canvas>
                <ul class="chart_peak_canvas_title">
                    <li>高峰
                        <div class="gf st"></div>
                    </li>
                    <li>平峰
                        <div class="pf st"></div>
                    </li>
                    <li>低峰
                        <div class="df st"></div>
                    </li>
                </ul>
            </div>
            <div style="width:1040px;height:280px;" class="chart_satisfaction"></div>
            <div class="chart_satisfaction_bt">
                <label>
                    <input class="set_bt way_1" type="radio" name="way" />候车时长与乘车舒适度</label>
                <label>
                    <input class="set_bt way_2" type="radio" name="way" />乘客满意度</label>
            </div>
        </div>
    </t>

    <t t-name="passenger_flow_chart_template">
        <div class="passenger_flow_chart line_chart">
            <div style="width: 1040px;height: 380px;" class="chart_passenger_flow"></div>
        </div>
    </t>

    <t t-name="site_chart_scatter_template">
        <div class="site_chart line_chart">
            <div style="width: 1040px;height: 648px;" class="chart_passenger_flow"></div>
        </div>
    </t>

    <t t-name="site_passenger_flow_hour_chart_template">
        <div class="line_chart">
            <div style="width: 1040px;height: 380px;" class="chart_passenger_flow"></div>
            <div class="chart_satisfaction_bt">
                <label><input class="set_bt way_1" type="radio" name="way" />前一日</label>
                <label><input class="set_bt way_2" type="radio" name="way" />上周同期</label>
                <label><input class="set_bt way_3" type="radio" name="way" />上月同期</label>
            </div>
            <table class="site_info_table">
                <tr>
                    <th>线路</th>
                    <th>站台</th>
                    <th>时间</th>
                    <th>上车人数</th>
                    <th>运力</th>
                    <th>下车人数</th>
                </tr>
            </table>
        </div>
    </t>
</templates>