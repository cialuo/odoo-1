<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <!-- coin_revenue Tree -->
        <record model="ir.ui.view" id="coin_revenue_tree_view">
            <field name="name">coin_revenue tree view</field>
            <field name="model">coin_revenue.coin_revenue</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="c_date"/>
                    <field name="route"/>
                    <field name="license_plate"/>
                    <field name="driver"/>
                    <field name="revenue"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        <!-- coin_revenue Form -->
        <record model="ir.ui.view" id="coin_revenue_form_view">
            <field name="name">coin_revenue form view</field>
            <field name="model">coin_revenue.coin_revenue</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="c_date"/>
                            <field name="route"/>
                            <field name="license_plate"/>
                            <field name="driver"/>
                            <field name="revenue"/>
                            <field name="remark"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ic_revenue Tree -->
        <record model="ir.ui.view" id="ic_revenue_tree_view">
            <field name="name">ic_revenue tree view</field>
            <field name="model">ic_revenue.ic_revenue</field>
