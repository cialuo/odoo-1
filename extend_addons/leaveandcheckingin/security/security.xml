        <record id="user_readonly_rule_employee_attencerecords" model="ir.rule">
            <field name="name">user</field>
            <field name="model_id" ref="model_employee_attencerecords"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
