<openerp>
  <data>
    <!-- tree视图 -->         
    <record id="view_tree_qingjia_qingjiadan" model="ir.ui.view">
      <field name="name">测试列表</field>
      <field name="model">ceshi.ceshi</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="days"/>
          <field name="startdate"/>
          <field name="reason"/>
          <field name="state"/>
        </tree>
      </field>
    </record>  

    <record id="view_tree_shenqing_shenqingdan" model="ir.ui.view">
      <field name="name">测试列表</field>
      <field name="model">ceshi.ceshi</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="days"/>
          <field name="startdate"/>
          <field name="reason"/>
          <!-- <field name="state"/> -->
        </tree>
      </field>
    </record>  

    <!-- form视图 -->
    <record id="view_form_qingjia_qingjiadan" model="ir.ui.view">
      <field name="name">请假单</field>
      <field name="model">ceshi.ceshi</field>
      <field name="arch" type="xml">
        <form>
          <header>
              <button name="button_confirm" states="draft"
                    string="提交" type="workflow" class="oe_highlight"/>
              <button name="button_complete" states="confirm"
                    string="批准" type="workflow" class="oe_highlight"/>           
              <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <group name="group_top" string="请假单">
              <field name="name"/>
              <field name="days"/>
              <field name="startdate"/>
              <field name="reason"/>
            </group>            
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_form_shenqing_shenqingdan" model="ir.ui.view">
      <field name="name">申请单</field>
      <field name="model">ceshi.ceshi</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group name="group_top" string="申请单">
              <field name="name"/>
              <field name="days"/>
              <field name="startdate"/>
              <field name="reason"/>
            </group>            
          </sheet>
        </form>
      </field>
    </record>

    <!-- 视图动作 -->
    <act_window id="action_qingjia_qingjiadan"
                   name="请假单"
                   res_model="ceshi.ceshi"
                   view_mode="tree,form" />
    <act_window id="action_shenqing_shenqingdan"
                   name="申请单"
                   res_model="ceshi.ceshi"
                   view_mode="tree,form" />

    <!-- 顶级菜单 -->
    <menuitem name="GY测试" id="menu_qingjia"/>

    <!-- 二级菜单 -->
    <menuitem name="请假单" id="menu_qingjia_qingjiadan" parent="menu_qingjia" action="action_qingjia_qingjiadan"/>

    <menuitem name="申请单" id="menu_shenqing_shenqingdan" parent="menu_qingjia" action="action_shenqing_shenqingdan"/>

    <!-- 三级菜单 -->
    <menuitem name="one" id="list_qingjia_qingjiadan" parent="menu_qingjia_qingjiadan"
              action="action_qingjia_qingjiadan"/>
    <menuitem name="two" id="list_shenqing_shenqingdan" parent="menu_shenqing_shenqingdan"
              action="action_shenqing_shenqingdan"/>
    

