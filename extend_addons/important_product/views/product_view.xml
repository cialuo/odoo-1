<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--在原有的分类中增加分类编码-->
        <record id="important_product_category_extend_form" model="ir.ui.view">
            <field name="name">Important product category extend form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="code"/>
                </xpath>
            </field>
        </record>
        <!--新增一张默认产品视图，动作没定义form的话，默认打开此视图-->
        <record id="materials_manage_important_product_form" model="ir.ui.view">
            <field name="name">Import product form</field>
            <field name="model">product.product</field>
            <field name="priority">0</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="%(procurement.procurement_order_action_product_template_stat)d"
                                    icon="fa-truck" string="Procurements" type="action"
                                    groups="stock.group_adv_location"
                                    attrs="{'invisible':[('type', '=', 'service')]}"/>
                        </div>
                        <field name="image_medium" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Product Name"/>
                            <h1><field name="name" placeholder="Product Name"/></h1>
                            <div name="options" groups="base.group_user">
                                <div class="col-sm-6">
                                    <div>
                                        <field name="sale_ok"/>
                                        <label for="sale_ok"/>
                                    </div>
                                    <div>
                                        <field name="purchase_ok"/>
                                        <label for="purchase_ok"/>
                                    </div>
                                    <div>
                                        <field name="is_important"/>
                                        <label for="is_important"/>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <field name="important_type" widget="radio" attrs="{'invisible': [('is_important', '=', False)]}"/>
                                </div>
                            </div>
                        </div>
                        <notebook>
                            <page string="General Information" name="general_info">
                                <separator string="Description"/>
                                <field name="description"/>
                                <group name="general_top">
                                    <group name="general_top_left">
                                        <field name="categ_id"/>
                                        <field name="parent_id"  attrs="{'invisible': [('is_important', '=', True)]}"/>
                                        <field name="inter_code"/>
                                        <field name="default_code"/>
                                        <field name="barcode"/>
                                    </group>
                                    <group name="general_top_right">
                                        <field name="list_price"/>
                                        <field name="standard_price"/>
                                        <field name="contract_price"/>
                                    </group>
                                </group>
                                <group name="general_bottom">
                                    <group name="general_bottom_left">
                                        <field name="require_trans"/>
                                        <field name="lifetime"/>
                                        <field name="vehicle_model" widget="many2many_tags"/>
                                    </group>
                                    <group name="general_bottom_right">
                                        <field name="weight"/>
                                        <field name="volume"/>
                                        <field name="special_attributes"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Tech Information" name="tech_info">
                                <field name="tech_ids">
                                    <tree editable="top">
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="standard"/>
                                        <field name="compare1"/>
                                        <field name="parameter1"/>
                                        <field name="compare2"/>
                                        <field name="parameter2"/>
                                        <field name="description"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Supply Info" name="supply_info">
                                <group name="supply_top">
                                    <group name="supply_top_left">
                                        <field name="type"/>
                                        <field name="shelf"/>
                                        <field name="keeper_id"/>
                                    </group>
                                    <group name="supply_top_right">
                                        <field name="route_ids" widget="many2many_checkboxes" attrs="{'invisible':[('type', 'in', ['service', 'digital'])]}"/>
                                    </group>
                                </group>
                                <separator string="Vendors"/>
                                <field name="seller_ids">
                                    <tree name="sell_tree">
                                        <field name="name"/>
                                        <field name="min_qty"/>
                                        <field name="price"/>
                                        <field name="date_start"/>
                                    </tree>
                                </field>
                            </page>
                            <!--<page name="plan_info" string="Plan Info">-->

                            <!--</page>-->
                            <!--<page name="equipment_info" string="Equipment Info"-->
                                  <!--attrs="{'invisible': ['|', ('important_type', '!=', 'equipment'), ('is_important', '=', False)]}">-->

                            <!--</page>-->
                            <!--<page name="energy_info" string="Energy Info"-->
                                  <!--attrs="{'invisible': ['|', ('important_type', '!=', 'energy'), ('is_important', '=', False)]}">-->

                            <!--</page>-->
                            <page name="component_info" string="Component Info"
                                  attrs="{'invisible': ['|', ('important_type', '!=', 'component'), ('is_important', '=', False)]}">
                                <field name="component_ids">
                                    <tree editable="top">
                                        <field name="code"/>
                                        <field name="product_id" readonly="1"/>
                                        <field name="odometer" readonly="1"/>
                                        <field name="state" readonly="1"/>
                                        <field name="location_id" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                        <field name="checkout_date" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--定义打开产品的动作，默认加入按父产品分组-->
        <record id="materials_manage_important_product" model="ir.actions.act_window">
            <field name="name">Important product</field>
            <field name="res_model">product.product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'group_by': ['parent_id', 'categ_id']}</field>
        </record>
        <menuitem id="materials_menu_product"
                      sequence="25"
                      name="product_menu"
                      parent="materials_manage.materials_menu_stock"
                      action="materials_manage_important_product"
        />
    </data>
</odoo>