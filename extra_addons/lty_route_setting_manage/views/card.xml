<openerp>
  <data>
    <!-- tree视图 -->
    <record id="view_tree_line_card" model="ir.ui.view">
      <field name="name">卡类配置</field>
      <field name="model">line.card</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- form视图 -->
    <record id="view_form_line_card" model="ir.ui.view">
      <field name="name">卡类配置</field>
      <field name="model">line.card</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group name="group_top" string="卡类配置">city
              <field name="name"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- 视图动作 -->
    <act_window id="action_line_card"
                   name="卡类配置"
                   res_model="line.card"
                   view_mode="tree,form" />

    <!-- 二级菜单 -->
    <menuitem name="卡类配置" id="menu_line_card" parent="lty_integrate_menu_manage.line_setting_menu" action="action_line_card"/>

  </data>
</openerp>